{
  "info": {
    "name": "FBPA Auth API",
    "_postman_id": "fbpa-auth-api-collection",
    "description": "Login and registration endpoints for FBPA API.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\",\n  \"name\": \"Joe\"\n}"
        },
        "url": {
          "raw": "{{base_url}}{{signup_path}}",
          "host": [ "{{base_url}}" ],
          "path": [ "{{signup_path}}" ]
        }
      },
      "response": []
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}{{login_path}}",
          "host": [ "{{base_url}}" ],
          "path": [ "{{login_path}}" ]
        }
      },
      "response": []
    }
  ]
}
